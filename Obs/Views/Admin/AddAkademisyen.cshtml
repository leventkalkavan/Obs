@using Obs.Controllers

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Yeni Akademisyen Ekle";
}

@model AddAkademisyenForm

@{
    if (ViewBag.ErrorMessages != null)
    {
        foreach (string ErrorMessage in ViewBag.ErrorMessages)
        {
            <div class="alert alert-danger" role="alert">
                @ErrorMessage
            </div>
        }
    }
}
<center>
    <div class="bg-white w-50 shadow p-3">
        <h3 class="text-center">Akademisyen Ekle</h3>
        <form asp-controller="Admin" asp-action="AddAkademisyen">

            <div class="form-group">
                <label for="inputUserName" class="font-weight-bold">Akademisyen Adı</label>
                <input type="text" class="form-control" asp-for=UserName id="inputUserName" requried>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="font-weight-bold">Şifre</label>
                <input type="text" class="form-control" asp-for=Password id="inputPassword" requried>
            </div>
            <div class="form-group">
                <label for="inputBolum" class="font-weight-bold">Bölüm Id'sini giriniz</label>
                <input type="number" class="form-control" asp-for=BolumId id="inputBolum" requried>
            </div>
            <button type="submit" class="btn btn-success w-10"><h3>Ekle</h3></button>
        </form>
    </div>
</center>
